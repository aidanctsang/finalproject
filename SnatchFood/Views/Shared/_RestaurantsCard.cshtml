@model SnatchFood.Models.Restaurants
    
<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ','_')">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-left">@Model.RestaurantName</label></div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="~/img/restaurant/@(Model.ImagePath)" alt="Card image cap">
        <div class="card-body p-1 px-3 row">
            <div class="col-12 p-1">
                <a asp-action="" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>  
        </div>
    </div>
</div>
