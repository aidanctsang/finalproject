@model SnatchFood.Models.ViewModels.CartUserVM

<form asp-action="ThankYou">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        Order Summary
                    </div>
                    <div class="col-6 text-right">
                        <a class="btn btn-outline-info btn-sm" asp-controller="Cart" asp-action="Index">Back to Cart</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="col-5 pb-4">
                            <div class="row">
                                <img src="/img/Check.png"/>
                            </div>

                            <div class="col-12 col-lg-5">

                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Order Summary:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @for (int i = 0; i < Model.CartList.Count(); i++)
                                        {
                                            <input type="hidden" asp-for="@Model.CartList[i].CartId" />
                                            <input type="hidden" asp-for="@Model.CartList[i].MenuName" />
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@Model.CartList[i].MenuName</h6>
                                                    <small class="text-muted">Price per Unit: ₱ @Model.CartList[i].Price</small>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-5 offset-md-7">
                        <button type="submit" class="btn btn-primary form-control">Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>